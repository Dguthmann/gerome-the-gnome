<div class="container">
  {{#with charRender }}
  <h1>Search Character</h1>
  <div class="row">
    <div class="input-field col s10">
      <select class="browser-default" id="searchchar">
        <option value="" disabled selected>Select Character</option>
        {{#each characters}}
        <option value={{id}}>{{first_name}} {{last_name}}</option>
        {{/each}}
        <label>Select Character</label>
      </select>
    </div>
  </div>
  <a class="btn-large col s2" id="searchBtn"><i class="material-icon right">Search</i></a>
  {{/with}}
  {{#if mostRecent }}
    {{#each mostRecent}}
      {{> character }}
    {{/each}}
  {{/if}}
</div>



